# Health Coach AI System - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# ENVIRONMENT SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================================================
# AI MODEL API KEYS
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Development Database (SQLite)
DEV_DATABASE_URL=sqlite:///./data/coach_dev.db

# Staging Database (PostgreSQL)
STAGING_DATABASE_URL=postgresql://username:password@localhost:5432/coach_staging

# Production Database (PostgreSQL)
PROD_DATABASE_URL=postgresql://username:password@host:5432/coach_prod

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ============================================================================
# GARMIN CONNECT API
# ============================================================================

# Garmin Developer Credentials
GARMIN_CLIENT_ID=your_garmin_client_id
GARMIN_CLIENT_SECRET=your_garmin_client_secret
GARMIN_REDIRECT_URI=http://localhost:8000/auth/garmin/callback

# Garmin API Settings
GARMIN_API_BASE_URL=https://apis.garmin.com
GARMIN_RATE_LIMIT_PER_MINUTE=60
GARMIN_TIMEOUT_SECONDS=30

# ============================================================================
# KNOWLEDGE BASE & VECTOR DATABASE
# ============================================================================

# Vector Database Configuration
VECTOR_DB_PATH=./data/knowledge
VECTOR_DB_TABLE=health_coaching_knowledge

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSIONS=1536

# ============================================================================
# WEB SERVER CONFIGURATION
# ============================================================================

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Session Configuration
SESSION_SECRET_KEY=your_session_secret_key_here
SESSION_MAX_AGE_HOURS=168  # 1 week

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Redis Configuration (for caching and task queue)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true

# File Storage
STORAGE_TYPE=local  # local, s3, gcs
STORAGE_PATH=./data/uploads

# AWS S3 (if using S3 storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET_NAME=health-coach-data

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_PATH=./logs/health_coach.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Metrics and Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Health Check Configuration
HEALTH_CHECK_INTERVAL_SECONDS=30
HEALTH_CHECK_TIMEOUT_SECONDS=10

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Agent Features
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_PREDICTION_MODELS=false
ENABLE_SOCIAL_FEATURES=false

# Integration Features
ENABLE_WHATSAPP_INTEGRATION=false
ENABLE_MOBILE_PUSH_NOTIFICATIONS=false
ENABLE_HEALTHCARE_PROVIDER_SYNC=false

# Experimental Features
ENABLE_VOICE_INTERACTION=false
ENABLE_WEARABLE_REAL_TIME_SYNC=true
ENABLE_AI_COACH_PERSONALITY=true

# ============================================================================
# BACKUP & RECOVERY
# ============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# Database Backup
DB_BACKUP_ENABLED=true
DB_BACKUP_COMPRESSION=true
DB_BACKUP_ENCRYPTION=false

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false
ENABLE_MOCK_GARMIN_API=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///:memory:
TEST_MOCK_EXTERNAL_APIS=true
TEST_PARALLEL_WORKERS=4

# ============================================================================
# PERFORMANCE OPTIMIZATION
# ============================================================================

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=512

# Background Task Processing
TASK_QUEUE_ENABLED=true
TASK_WORKER_COUNT=4
TASK_RETRY_ATTEMPTS=3

# API Response Optimization
ENABLE_RESPONSE_COMPRESSION=true
ENABLE_API_CACHING=true
API_CACHE_TTL_SECONDS=300