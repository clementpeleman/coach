# Coverage configuration for Health Coach AI System

[run]
# Source directories to measure
source =
    agents
    teams
    workflows
    tools
    database
    config
    main.py

# Files to exclude from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    .venv/*
    venv/*
    env/*
    build/*
    dist/*
    *.egg-info/*
    .tox/*
    .pytest_cache/*
    setup.py
    */migrations/*
    */examples/*
    */docs/*

# Enable branch coverage
branch = True

# Parallel processing
parallel = True

# Include subdirectories
include =
    agents/*
    teams/*
    workflows/*
    tools/*
    database/*
    config/*
    main.py

[report]
# Reporting options
show_missing = True
skip_covered = False
skip_empty = True
sort = Cover
precision = 2

# Coverage thresholds
fail_under = 80

# Output format
format = term-missing

# Exclude lines from coverage
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:
    if TYPE_CHECKING:

    # Don't complain about abstract methods
    @(abc\.)?abstractmethod

    # Don't complain about pass statements
    pass

    # Don't complain about platform specific code
    pragma: platform

    # Don't complain about logger calls
    logger\.

    # Don't complain about exception handling
    except ImportError:
    except Exception:

[html]
# HTML report settings
directory = htmlcov
title = Health Coach AI System Coverage Report
show_contexts = True

[xml]
# XML report settings
output = coverage.xml

[json]
# JSON report settings
output = coverage.json

[paths]
# Path mappings for different environments
source =
    .
    */site-packages